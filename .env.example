# Environment
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://zipsea_user:zipsea_password@localhost:5432/zipsea_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=zipsea_dev
DATABASE_USER=zipsea_user
DATABASE_PASSWORD=zipsea_password
DATABASE_SSL=false

# Test Database Configuration
TEST_DATABASE_URL=postgresql://zipsea_test_user:zipsea_test_password@localhost:5433/zipsea_test

# Redis Configuration
REDIS_URL=redis://:redis_password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
CLERK_JWT_KEY=your_jwt_key_here

# Traveltek Integration
TRAVELTEK_FTP_HOST=ftpeu1prod.traveltek.net
TRAVELTEK_FTP_USER=your_ftp_username
TRAVELTEK_FTP_PASSWORD=your_ftp_password
TRAVELTEK_FTP_PORT=21
TRAVELTEK_FTP_SECURE=true

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_ENDPOINT_SECRET=whsec_your_endpoint_secret

# Sentry Configuration
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0
SENTRY_TRACE_SAMPLE_RATE=1.0

# Email Configuration (Resend)
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@zipsea.com
SUPPORT_EMAIL=support@zipsea.com

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Cache Configuration
CACHE_TTL_SEARCH=3600
CACHE_TTL_CRUISE_DETAILS=21600
CACHE_TTL_PRICING=900
CACHE_TTL_SHIP_DATA=604800

# Job Queue Configuration
BULL_REDIS_URL=redis://:redis_password@localhost:6379/1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_TIMEOUT=30000

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Development Configuration
ENABLE_API_DOCS=true
ENABLE_REQUEST_LOGGING=true
ENABLE_QUERY_LOGGING=false

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# Traveltek Sync Configuration
SYNC_ENABLED=true
SYNC_CRON_SCHEDULE=0 2 * * *
SYNC_BATCH_SIZE=100
SYNC_CONCURRENT_DOWNLOADS=5
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=5000