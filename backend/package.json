{
  "name": "zipsea-backend",
  "version": "1.0.0",
  "description": "Zipsea Cruise OTA Platform Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:seed": "ts-node scripts/seed.ts",
    "db:reset": "npm run db:drop && npm run db:generate && npm run db:migrate && npm run db:seed",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "render:build": "./build.sh",
    "render:start": "./start.sh"
  },
  "keywords": [
    "cruise",
    "ota",
    "travel",
    "booking",
    "traveltek",
    "api"
  ],
  "author": "Zipsea Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "drizzle-orm": "^0.29.1",
    "@clerk/express": "^1.7.23",
    "@sentry/node": "^7.81.1",
    "@sentry/profiling-node": "^1.3.5",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "uuid": "^9.0.1",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "axios": "^1.6.2",
    "ftp": "^0.3.10",
    "node-cron": "^3.0.3",
    "bull": "^4.12.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@types/redis": "^4.0.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/compression": "^1.7.5",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/ftp": "^0.3.36",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "@types/bull": "^4.10.0",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}